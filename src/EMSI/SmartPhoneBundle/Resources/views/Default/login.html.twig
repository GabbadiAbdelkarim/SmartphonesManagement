<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Gestion des SmartPhones</title>

{% block stylesheets %}
    <!-- CSS -->
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">
    <link rel="stylesheet" href="{{ asset('bundles/emsismartphone/bootstrap/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/emsismartphone/font-awesome/css/font-awesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/emsismartphone/css/form-elements.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/emsismartphone/css/style.css') }}">
{% endblock %}
{% block icons %}
    <!-- Favicon and touch icons -->
    <link rel="shortcut icon" href="{{ asset('bundles/emsismartphone/ico/favicon.png') }}">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="{{ asset('bundles/emsismartphone/ico/apple-touch-icon-144-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="{{ asset('bundles/emsismartphone/ico/apple-touch-icon-114-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="{{ asset('bundles/emsismartphone/ico/apple-touch-icon-72-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" href="{{ asset('bundles/emsismartphone/ico/apple-touch-icon-57-precomposed.png') }}">
{% endblock %}
    </head>
<body background="{{ asset('bundles/emsismartphone/img/back.jpg') }}">
{% block container %}
    <div class="top-content">

        <div class="inner-bg">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-2 text">
                        <h1><center><strong>EMSI 3IIR3</strong> Login Form</center></h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3 form-box">
                        <div class="form-top">
                            <div class="form-top-left">
                                <p>Enter your username and password to log on:</p>
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-key"></i>
                            </div>
                        </div>
                        <div class="form-bottom">
                            <form role="form" action="{{ path('emsi_smart_phone_login') }}" method="POST" class="login-form">
                                <div class="form-group">
                                    <label class="sr-only" for="form-username">Login</label>
                                    <input type="text" name="login" placeholder="Login..." class="form-username form-control" id="form-username">
                                </div>
                                <div class="form-group">
                                    <label class="sr-only" for="form-password">Password</label>
                                    <input type="password" name="mtp" placeholder="Password..." class="form-password form-control" id="form-password">
                                </div>
                                <button type="submit" class="btn">Sign in!</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3 social-login">
                        <h3>...or login with:</h3>
                        <div class="social-login-buttons">
                            <a class="btn btn-link-1 btn-link-1-facebook" href="#">
                                <i class="fa fa-facebook"></i> Facebook
                            </a>
                            <a class="btn btn-link-1 btn-link-1-twitter" href="#">
                                <i class="fa fa-twitter"></i> Twitter
                            </a>
                            <a class="btn btn-link-1 btn-link-1-google-plus" href="#">
                                <i class="fa fa-google-plus"></i> Google Plus
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    {% if name is defined  %}
        <div class="alert-info fade in">

            <strong>Bonjour {{ name }}</strong>

        </div>
    {% endif %}
{% endblock %}
{% block javascripts %}
<!-- Javascript -->
<script src="{{ asset('bundles/emsismartphone/js/jquery-1.11.1.min.js') }}"></script>
<script src="{{ asset('bundles/emsismartphone/bootstrap/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('bundles/emsismartphone/js/jquery.backstretch.min.js') }}"></script>
<script src="{{ asset('bundles/emsismartphone/js/scripts.js') }}"></script>
    <!--[if lt IE 10]>
    <script src="{{ asset('bundles/emsismartphone/js/placeholder.js') }}"></script>
    <![endif]-->
{% endblock %}
    </body>

</html>